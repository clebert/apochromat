{
  "name": "apochromat",
  "version": "0.1.0",
  "description": "Declarative programming of interactive CLI applications.",
  "bugs": {
    "url": "https://github.com/clebert/apochromat/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/apochromat.git"
  },
  "license": "MIT",
  "author": "Clemens Akens <clebert@me.com>",
  "sideEffects": false,
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:cjs": "tsc --project tsconfig.cjs.json --incremental --pretty",
    "build:esm": "tsc --project tsconfig.esm.json --incremental --pretty",
    "ci": "run-p format:test lint test build",
    "format": "prettier --write '**/*.{html,js,json,md,ts,tsx,yml}'",
    "format:test": "prettier --list-different '**/*.{html,js,json,md,ts,tsx,yml}'",
    "lint": "tslint --config tslint.json --project tsconfig.json --format verbose",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "start": "node example.js",
    "test": "jest"
  },
  "dependencies": {
    "batis": "^12.0.1",
    "string-width": "^4.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.9",
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.10",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  }
}
